<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kayttaja.drawings.Diagrammi">

    <RelativeLayout
        android:id="@+id/myDrawing"
        android:layout_width="374dp"
        android:layout_height="433dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <Button
        android:id="@+id/toLeft"
        android:onClick="moveDown"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="ALAS"
        android:layout_marginStart="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        tools:layout_editor_absoluteX="39dp" />

    <Button
        android:id="@+id/toRight"
        android:onClick="moveUp"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="YLÃ–S"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="31dp"
        app:layout_constraintTop_toTopOf="@+id/toLeft"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/toLeft"
        android:layout_marginLeft="8dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:onClick="deleteLast"
        android:text="delete all"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/toRight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toRight" />


</android.support.constraint.ConstraintLayout>
